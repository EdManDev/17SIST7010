<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginLeft="5sp"
  android:layout_marginRight="5sp"
  tools:context=".MainActivity">

  <TableLayout
    android:id="@+id/tableLayout"
    android:layout_width="0dp"
    android:layout_height="281dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <Button
        android:id="@+id/button41"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/siete" />

      <Button
        android:id="@+id/button42"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/ocho" />

      <Button
        android:id="@+id/button43"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/nueve" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <Button
        android:id="@+id/button40"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/cuatro" />

      <Button
        android:id="@+id/button39"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/cinco" />

      <Button
        android:id="@+id/button34"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/seis" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <Button
        android:id="@+id/button44"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/uno" />

      <Button
        android:id="@+id/button45"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/dos" />

      <Button
        android:id="@+id/button46"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tres" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <Button
        android:id="@+id/button47"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/sumar" />

      <Button
        android:id="@+id/button48"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/cero" />

      <Button
        android:id="@+id/button49"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/restar" />
    </TableRow>

    <TableRow
      android:layout_width="wrap_content"
      android:layout_height="match_parent">

      <Button
        android:id="@+id/button50"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/multiplicar" />

      <Button
        android:id="@+id/button51"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:text="@string/resultado" />

      <Button
        android:id="@+id/button52"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/dividir" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <Button
        android:id="@+id/button55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_weight="3"
        android:text="@string/RestaurarValores" />
    </TableRow>
  </TableLayout>

  <TextView
    android:id="@+id/textView"
    android:layout_width="322dp"
    android:layout_height="0dp"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="293dp"
    android:hint="@string/textView"
    android:textSize="70sp"
    app:layout_constraintBottom_toTopOf="@+id/tableLayout"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>